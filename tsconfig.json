{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": "./",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
    },

    "skipLibCheck": true,
    "noImplicitThis": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "shims.d.ts",
    "vite.config.*",
    "env.d.ts",

  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}